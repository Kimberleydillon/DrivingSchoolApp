<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/volt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fafafa"
            android:paddingLeft="25dp"
            android:paddingTop="5dp">


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#000000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"

            android:scaleType="fitEnd"
            android:src="@drawable/topgunlogo" />

        <android.support.v7.widget.CardView
            android:id="@+id/app2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:elevation="2dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <net.steamcrafted.materialiconlib.MaterialIconView

                    android:id="@+id/phoneicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="12dp"
                    app:materialIcon="phone"
                    app:materialIconColor="#000000"
                    app:materialIconSize="24dp" />

                <TextView
                    android:id="@+id/info_phone"
                    style="@style/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/phoneicon"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@id/phoneicon"
                    android:layout_toRightOf="@id/phoneicon"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="250-885-2216" />

                <net.steamcrafted.materialiconlib.MaterialIconView

                    android:id="@+id/emailicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneicon"
                    android:padding="12dp"
                    app:materialIcon="email"
                    app:materialIconColor="#000000"
                    app:materialIconSize="24dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView

                    android:id="@+id/websiteicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailicon"
                    android:padding="12dp"
                    app:materialIcon="desktop_mac"
                    app:materialIconColor="#000000"
                    app:materialIconSize="24dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView

                    android:id="@+id/hoursofopicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/websiteicon"
                    android:padding="12dp"
                    app:materialIcon="clock"
                    app:materialIconColor="#000000"
                    app:materialIconSize="24dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView

                    android:id="@+id/descriptionicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hoursofopicon"
                    android:padding="12dp"
                    app:materialIcon="information_outline"
                    app:materialIconColor="#000000"
                    app:materialIconSize="24dp" />


                <TextView
                    android:id="@+id/info_email"
                    style="@style/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/emailicon"
                    android:layout_alignTop="@id/emailicon"
                    android:layout_below="@id/info_phone"
                    android:layout_toRightOf="@id/emailicon"
                    android:padding="12dp"
                    android:text="info@topgundrivingschool.ca" />


                <TextView
                    android:id="@+id/info_website"
                    style="@style/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/websiteicon"
                    android:layout_alignTop="@id/websiteicon"
                    android:layout_below="@id/info_email"
                    android:layout_toRightOf="@id/websiteicon"
                    android:padding="12dp"
                    android:text="gtopgundrivingschool.ca" />

                <TextView
                    android:id="@+id/info_hours"
                    style="@style/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/hoursofopicon"
                    android:layout_alignTop="@id/hoursofopicon"
                    android:layout_below="@id/info_website"
                    android:layout_toRightOf="@id/hoursofopicon"
                    android:padding="12dp"
                    android:text="Hours of Operation: 8AM- 8PM " />

                <TextView
                    android:id="@+id/info_description"
                    style="@style/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/descriptionicon"
                    android:layout_below="@id/info_hours"
                    android:layout_toRightOf="@id/descriptionicon"
                    android:padding="12dp"
                    android:text="Learn how to drive from professionals who truly care! We offer preparation for class 5 and 7 licenses. Join our fleet of accomplished drivers and strive to make our roadways safer!  " />


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>